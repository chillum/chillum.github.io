@import solarized

sans = 'Marker Felt', 'Segoe Print', 'Liberation Sans Narrow', 'DejaVu Sans Condensed', fantasy
book = 'American Typewriter', Cambria, Caladea, 'DejaVu Serif Condensed', serif

body
  font 0.8em book
  line-height 1.32
  padding 0 1.5em
  background-color base2
  color base02

@media screen and (max-width: 400px)
  body
    font-size 0.7em

@media screen and (min-width: 751px)
  body
    font-size 0.864em

@media screen and (min-width: 1281px)
  body
    font-size 1em

img
  position absolute
  top 0.5em
  right 0.7em

h1
  font 2.7em sans
  font-style italic
  color cyan
  margin-left -0.15em

h3
  border-top 1px solid base0
  padding-top 0.5em
  margin-top 1em
  margin-bottom 0.4em
  color base00
  font-family sans

a:link, a:hover, a:active
  color blue
  text-decoration none

a:visited
  color violet
  text-decoration none
